{
  "name": "maison-nolae-backend",
  "version": "1.0.1",
  "description": "Backend of Maison de Nolae project",
  "license": "Beerware",
  "main": "src/index.js",
  "scripts": {
    "start": "nodemon src/index.js ",
    "start:daemon": "forever start -c \"npm start\" ./ ",
    "test": "jest --runInBand --no-cache --ci --verbose --colors --env=node",
    "test:watch": "jest --watchAll --ci --runInBand --colors --env=node",
    "test:ci:docker": "npm-run-all start:daemon test:watch",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "preset:env": "node set_env.js"
  },
  "engines": {
    "node": "10.21.0"
  },
  "dependencies": {
    "ajv": "6.12.3",
    "body-parser": "1.19.0",
    "chalk": "4.1.0",
    "dotenv": "^8.2.0",
    "express": "4.17.1",
    "helmet": "^4.1.0",
    "jsonwebtoken": "8.5.1",
    "node-fetch": "2.6.0",
    "nodemon": "2.0.4",
    "serve-favicon": "2.5.0",
    "uuid": "8.3.0",
    "ws": "7.3.1"
  },
  "devDependencies": {
    "axios": "^0.19.2",
    "forever": "^3.0.0",
    "jest": "26.2.2",
    "jose": "^1.28.0",
    "nodemon": "1.18.4",
    "npm-run-all": "^4.1.5",
    "standard": "^14.3.4"
  },
  "keywords": [],
  "jest": {
    "resetMocks": true,
    "setupFilesAfterEnv": [
      "<rootDir>/tests/helpers/jest.setup.js"
    ],
    "setupFiles": [
      "dotenv/config"
    ]
  },
  "standard": {
    "globals": [
      "describe",
      "it",
      "after",
      "afterEach",
      "before",
      "beforeEach"
    ],
    "env": [
      "node",
      "jest"
    ]
  }
}
